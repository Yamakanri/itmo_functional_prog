-module(otobraz10).

-export([start/0]).


start() -> 2 + lists:sum([X || X <- lists:seq(3, 2000000, 2), is_prime(X)]).

% Проверка на простоту
is_prime(2) -> true;
is_prime(N) -> is_prime(N, 3).

is_prime(N, D) when D * D > N -> true;
is_prime(N, D) when N rem D =:= 0 -> false;
is_prime(N, D) -> is_prime(N, D + 2).
