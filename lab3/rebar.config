{erl_opts, [debug_info]}.

% Папки с исходниками
{src_dirs, ["src/proc", "src/gen_server"]}.

% Папки с тестами
{test_dirs, ["src/proc/test", "src/gen_server/test"]}.

% EUnit опции
{eunit_opts, [verbose]}.

% Плагины
{project_plugins, [
    rebar3_lint,
    erlfmt,
    rebar3_proper
]}.

% Настройки erlfmt
{erlfmt, [
    {print_width, 90},
    {files, [
        "{src/proc,src/gen_server,src/proc/test,src/gen_server/test}/*.{erl,src}",
        "rebar.config"
    ]}
]}.
